<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<HBox fx:id="root" styleClass="window-controls" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Button fx:id="minBtn" maxHeight="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#minimizeWindow" prefHeight="60.0" prefWidth="50.0" HBox.hgrow="ALWAYS">
         <graphic>
            <FontIcon iconLiteral="mdi-window-minimize" />
         </graphic>
      </Button>
      <Button fx:id="restMaxBtn" maxHeight="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#maximizeWindow" prefHeight="60.0" prefWidth="50.0">
         <graphic>
            <FontIcon iconLiteral="mdi-window-maximize" />
         </graphic>
      </Button>
      <Button fx:id="closeBtn" maxHeight="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#closeWindow" prefHeight="60.0" prefWidth="50.0" styleClass="close-button">
         <graphic>
            <FontIcon iconLiteral="mdi-window-close" selectionEnd="0" />
         </graphic>
      </Button>
   </children>
</HBox>
