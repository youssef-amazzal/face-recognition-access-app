               <children>
                  <Label styleClass="text-bold" text="Last Name" />
                  <HBox spacing="10.0" VBox.vgrow="ALWAYS">
                     <children>
                        <TextField fx:id="LastNameField" maxWidth="1.7976931348623157E308" prefHeight="50.0" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
               </children>
