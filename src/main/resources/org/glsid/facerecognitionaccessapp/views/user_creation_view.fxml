<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" prefHeight="900.0" prefWidth="1280.0" styleClass="bg" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.glsid.facerecognitionaccessapp.presentation.views.UserCreationViewController">
   <children>
      <VBox spacing="50.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox alignment="TOP_CENTER">
               <children>
                  <Label text="Add New User">
                     <styleClass>
                        <String fx:value="text-muted" />
                        <String fx:value="title-5" />
                        <String fx:value="text-demi-bold" />
                     </styleClass>
                  </Label>
                  <Label fx:id="ActiveStepTitle" text="Active Step Title">
                     <styleClass>
                        <String fx:value="title-1" />
                        <String fx:value="text-heavy" />
                     </styleClass></Label>
               </children>
            </VBox>
            <HBox VBox.vgrow="ALWAYS">
               <children>
                  <VBox fx:id="StepIndicatorsSlot" alignment="TOP_RIGHT" prefWidth="238.0" spacing="20.0" />
                  <Pane HBox.hgrow="ALWAYS" />
                  <VBox fx:id="StepContentSlot" maxWidth="-Infinity" prefWidth="520.0" HBox.hgrow="ALWAYS">
                     <children>
                        <ScrollPane fitToWidth="true" maxHeight="1.7976931348623157E308" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
                  <Pane layoutX="298.0" layoutY="10.0" HBox.hgrow="ALWAYS" />
                  <VBox prefWidth="238.0" />
               </children>
            </HBox>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
      <Separator prefWidth="200.0" />
      <HBox alignment="CENTER_RIGHT" prefHeight="110.0" prefWidth="1276.0" spacing="15.0">
         <children>
            <Button fx:id="PreviousButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="150.0" text="Previous">
               <styleClass>
                  <String fx:value="accent" />
                  <String fx:value="button-outlined" />
                  <String fx:value="text-bold" />
               </styleClass>
            </Button>
            <Button fx:id="NextButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="150.0" text="Next">
               <styleClass>
                  <String fx:value="accent" />
                  <String fx:value="text-bold" />
               </styleClass>
            </Button>
            <Button fx:id="DoneButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="150.0" text="Done">
               <styleClass>
                  <String fx:value="accent" />
                  <String fx:value="text-bold" />
               </styleClass>
            </Button>
         </children>
         <padding>
            <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
         </padding>
         <styleClass>
            <String fx:value="surface" />
            <String fx:value="rounded-bottom" />
         </styleClass>
      </HBox>
   </children>
</VBox>
